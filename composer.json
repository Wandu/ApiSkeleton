{
    "name": "wandu/api-skeleton",
    "description": "Wandu API Skeleton",
    "keywords": [
        "wandu",
        "framework"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "beta",
    "require": {
        "php": ">=7.1",
        "wandu/framework": "4.0.*",
        "neomerx/cors-psr7": "^1.0",
        "monolog/monolog": "^1.22",
        "firebase/php-jwt": "^5.0",
        "illuminate/database": "^5.6",
        "egulias/email-validator": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1"
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8888 -t public",
        "test": [
            "phpunit --colors=always"
        ]
    }
}
